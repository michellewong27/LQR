<%= render 'application/nav_bar' %>

<h1><%= @store.name %>'s inventory </h1>
<% if session[:user_id] == @store.user_id %>
    <%= render 'inventory_option' %>
<% else %>
    <% if !@store_drinks.empty? %>
        <% @store_drinks.each do |sd| %>
            <p>Brand: <%= sd.drink.name %></p>
            <p>Price: <%= sd.drink.price %></p>
            <hr>
            <br>
        <% end %>
    <% else %>
        <%= "#{@store.name} has no inventory" %>
        <br>
    <% end %>
<% end %>

<br>
<%= link_to "Back to stores", stores_path %>

