
<%= render 'nav_bar' %>

<%= form_with url: drink_search_path, method: :get, local:true do %>
    <div style= "color:white;"><p>Search drinks: <%= text_field_tag(:name, params[:search]) %></p></div>
    <%= submit_tag "Search" %>
    <% end %>
    <br>

<hr>
<div style= "color: white"><%= "All Drinks" %></div>
<br>

<div class="card-container">
    <% @drinks.each do |s| %>
    <div class="card" style="width: 18rem; display: inline-block; background-image: url(<%=s.image%>);">
      <div class="card-body">
        <h5 class="card-title"><%=link_to s.name, drink_path(s)%></h5> 
      </div>
    </div>

   <% end %>
</div>
  
</div>


