<%= render 'application/nav_bar' %>

<h1>Beer here </h1>

<%= form_with url: beer_search_path, method: :get, local:true do %>
    <p>Search beers: <%= text_field_tag(:name, params[:search]) %></p>
    <%= submit_tag "Search" %>
    <% end %>
    <br>

<% @beers.each do |s| %>
    <%=link_to s.name, drink_path(s)%>
    <br>
    <% end %>

 