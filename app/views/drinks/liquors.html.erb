<%= render 'application/nav_bar' %>

<div style= "color: white"><h1>Liquor here </h1></div>

<%= form_with url: liquor_search_path, method: :get, local:true do %>
    <div style= "color: white"><p>Search liquors: <%= text_field_tag(:name, params[:search]) %></p></div>
    <%= submit_tag "Search" %>
    <% end %>
    <br>


<div class="card-container">
    <% @liquors.each do |s| %>

  <div class="card" style="width: 18rem; display: inline-block;">
    <div class="card-body">
      <h5 class="card-title"><%=link_to s.name, drink_path(s)%></h5> 
    </div>
  </div>

   <% end %>
</div>
  
</div>

