<!DOCTYPE html>
<html>
  <head>
    <title>LQR2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class = "container" >
  <% if loggedin? %>
    <%= link_to "Log out", sessions_path, method: :delete %>
  <% else %>
    <%= link_to "Login", login_path %>
  <% end %>
    <%= yield %>
  </div>
    </body>
</html>
